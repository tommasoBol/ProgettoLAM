<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsFragment"
         />
    <Button
        android:id="@+id/btnNoiseMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:text="Noise"
        android:textColor="#ffffff"
        android:textSize="10sp"/>
    <Button
        android:id="@+id/btnWIFIMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnNoiseMap"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:text="WIFI"
        android:textColor="#ffffff"
        android:textSize="10sp"/>
    <Button
        android:id="@+id/btn4GMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnWIFIMap"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:text="LTE"
        android:textColor="#ffffff"
        android:textSize="10sp"/>



    <Button
        android:id="@+id/btn10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:text="10m"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btn100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn10"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:text="100m"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn100"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:text="1km"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:visibility="invisible"/>


    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/previous"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="1dp"
        android:text="Next"
        android:textSize="12sp"
        android:visibility="invisible"
        android:textColor="#ffffff" />
    <Button
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:text="Previous"
        android:textSize="12sp"
        android:visibility="invisible"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnlegend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="\?\"
        android:layout_margin="5dp"
        />

</RelativeLayout>